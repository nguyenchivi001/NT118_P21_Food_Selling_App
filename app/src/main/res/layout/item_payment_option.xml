<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="32dp"
    android:paddingHorizontal="16dp">

    <!-- Mỗi option cách nhau 16dp -->
    <LinearLayout
        android:id="@+id/optionMastercard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_card_unselected"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:src="@drawable/mastercard"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thẻ MasterCard"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="2dp" />

        <ImageView
            android:id="@+id/iconCheckMaster"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:tint="#3A2C29" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionVisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_card_unselected"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:src="@drawable/visa"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thẻ Visa"
            android:textSize="16sp"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iconCheckVisa"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:tint="#3A2C29" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionMomo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_card_unselected"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/momo"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Momo E-Wallet"
            android:textSize="16sp"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iconCheckMomo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:tint="#3A2C29" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionZalopay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_card_unselected"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/zalopay"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ZaloPay"
            android:textSize="16sp"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iconCheckZalopay"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:tint="#3A2C29" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionCash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_card_unselected"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cash"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thanh toán khi nhận hàng"
            android:textSize="16sp"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iconCheckCash"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:tint="#3A2C29" />
    </LinearLayout>

</LinearLayout>
