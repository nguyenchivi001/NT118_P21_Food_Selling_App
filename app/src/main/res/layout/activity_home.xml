<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foodgo"
                android:textStyle="bold"
                android:textColor="#EF2A39"
                android:textSize="26sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt món yêu thích của bạn!"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:padding="10dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Tìm kiếm..."
                android:background="@null"
                android:paddingStart="12dp"
                android:textColor="#000"
                android:textColorHint="#999999"
                android:textSize="14sp"/>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/tabContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tất cả"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/tab_selected"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCombos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Combo"
                    android:textColor="#888888"
                    android:background="@drawable/tab_unselected"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSliders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bánh mì kẹp nhỏ"
                    android:textColor="#888888"
                    android:background="@drawable/tab_unselected"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </HorizontalScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFoodList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:paddingBottom="90dp"
                android:clipToPadding="false" />

            <TextView
                android:id="@+id/tvNoProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Không tìm thấy món ăn"
                android:textSize="16sp"
                android:textColor="#777777"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        app:fabAlignmentMode="center"
        app:fabCradleRoundedCornerRadius="35dp"
        app:fabCradleVerticalOffset="10dp"
        app:fabCradleMargin="8dp"
        app:hideOnScroll="false" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_nav">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            android:background="@android:color/transparent"
            app:labelVisibilityMode="labeled"/>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
