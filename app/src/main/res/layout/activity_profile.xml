<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Header với hình nền đỏ -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_profile_header"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />

            <!-- Avatar -->
            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_avatar_circle"
                android:src="@drawable/ic_user" />
        </RelativeLayout>

        <!-- Form thông tin người dùng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="12sp"
                android:textColor="#888888" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sophia Patel"
                android:background="@drawable/bg_edittext"
                android:textColor="#000000"
                android:textSize="14sp"
                android:padding="12dp"
                android:inputType="textPersonName" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sophiapatel@gmail.com"
                android:background="@drawable/bg_edittext"
                android:textColor="#000000"
                android:textSize="14sp"
                android:padding="12dp"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <!-- Các tùy chọn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết thanh toán"
                android:textSize="14sp"
                android:textColor="#000000"
                android:padding="16dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch sử đơn hàng"
                android:textSize="14sp"
                android:textColor="#000000"
                android:padding="16dp"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>

        <!-- Nút -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginBottom="32dp">

            <!-- Edit Profile Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chỉnh sửa hồ sơ"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3A2C29"
                app:icon="@drawable/ic_edit"
                app:iconTint="@android:color/white"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                android:paddingVertical="12dp"
                android:layout_marginEnd="8dp"
                app:cornerRadius="24dp"
                app:rippleColor="@android:color/transparent" />

            <!-- Log Out Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đăng xuất"
                android:textColor="#EF2A39"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/redAccent"
                app:strokeWidth="2dp"
                app:icon="@drawable/ic_logout"
                app:iconTint="@color/redAccent"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                app:cornerRadius="24dp"
                app:rippleColor="@android:color/transparent"
                android:layout_marginStart="8dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
