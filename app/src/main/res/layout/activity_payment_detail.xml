<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card Layout -->
        <LinearLayout
            android:id="@+id/cardFieldsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtCardNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Enter card number"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#999999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiration Date (MM/YY)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtExpiry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="MM/YY"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#999999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtCvv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="CVV"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:inputType="numberPassword"/>
        </LinearLayout>

        <!-- MoMo Layout -->
        <LinearLayout
            android:id="@+id/momoFieldsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MoMo Phone Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtMomoPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Enter MoMo phone number"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:inputType="phone"/>
        </LinearLayout>

        <!-- ZaloPay Layout -->
        <LinearLayout
            android:id="@+id/zalopayFieldsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZaloPay User ID"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtZaloPayId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Enter ZaloPay ID"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#999999"/>
        </LinearLayout>

        <!-- Cash -->
        <TextView
            android:id="@+id/txtCashMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn sẽ thanh toán bằng tiền mặt khi nhận hàng."
            android:textSize="16sp"
            android:textColor="#000000"
            android:visibility="gone"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp" />

        <!-- Confirm Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#3A2C29"
            android:paddingVertical="12dp"
            app:cornerRadius="16dp"/>
    </LinearLayout>
</ScrollView>
